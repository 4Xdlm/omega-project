{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "B1_DATASET.schema.json",
  "title": "B1 Stability Dataset",
  "description": "Schema for B1 Stability test dataset",
  "type": "object",
  "required": ["version", "description", "samples"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "samples": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "text"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^B1-\\d{3}$"
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
