{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "B2_DATASET.schema.json",
  "title": "B2 Adversarial Dataset",
  "description": "Schema for B2 Adversarial test dataset - NO expected_emotion (canon not frozen)",
  "type": "object",
  "required": ["version", "description", "samples"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "samples": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "text"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ADV-\\d{3}$"
          },
          "type": {
            "type": "string",
            "enum": ["sarcasm", "negation", "edge_case", "unicode", "empty", "long", "injection"]
          },
          "text": {
            "type": "string"
          }
        }
      }
    }
  }
}
