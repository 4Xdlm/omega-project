{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omega-project.io/schemas/emotional-dna-ir/v1.0",
  "title": "Emotional DNA Intermediate Representation",
  "description": "Machine-first IR for emotional/narrative genome analysis - OMEGA Standard v1.0",
  "type": "object",
  "required": ["version", "identity", "emotional_axes", "provenance"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.0\\.[0-9]+$",
      "description": "Schema version (semver)"
    },
    "identity": {
      "type": "object",
      "required": ["id", "title", "language"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA256 hash identifier"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "ISO 639-1 language code"
        },
        "work_version": {
          "type": "string",
          "description": "Version of the analyzed work"
        }
      }
    },
    "emotional_axes": {
      "type": "object",
      "required": ["dimensions", "values"],
      "properties": {
        "dimensions": {
          "type": "integer",
          "minimum": 1,
          "maximum": 128,
          "description": "Number of emotional dimensions"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": -1.0,
            "maximum": 1.0
          },
          "description": "Normalized emotional vector [-1.0, 1.0]"
        },
        "labels": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Human-readable labels for each dimension"
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Confidence score [0.0, 1.0]"
        }
      }
    },
    "style_signatures": {
      "type": "object",
      "properties": {
        "rhythm": {
          "type": "object",
          "properties": {
            "avg_sentence_length": { "type": "number", "minimum": 0 },
            "variance": { "type": "number", "minimum": 0 }
          }
        },
        "density": {
          "type": "object",
          "properties": {
            "lexical_density": { "type": "number", "minimum": 0, "maximum": 1 },
            "word_frequency_profile": { "type": "string" }
          }
        },
        "register": {
          "type": "string",
          "enum": ["formal", "neutral", "informal", "mixed"]
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "taboos": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Topics/words explicitly avoided"
        },
        "intensity_bounds": {
          "type": "object",
          "properties": {
            "min": { "type": "number", "minimum": 0, "maximum": 1 },
            "max": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "arc_constraints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "value": { "type": "string" }
            }
          }
        }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["source_hash", "analyzer_version", "timestamp"],
      "properties": {
        "source_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA256 of source text"
        },
        "analyzer_version": {
          "type": "string",
          "description": "Version of analysis engine"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        },
        "license": {
          "type": "string",
          "description": "License under which analysis was performed"
        },
        "consent": {
          "type": "boolean",
          "description": "Whether consent was obtained for analysis"
        }
      }
    },
    "compatibility": {
      "type": "object",
      "properties": {
        "min_version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "max_version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        }
      }
    },
    "proofs": {
      "type": "object",
      "properties": {
        "input_hashes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        },
        "merkle_root": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    }
  },
  "additionalProperties": false
}
