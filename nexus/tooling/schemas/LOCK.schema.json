{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omega.nexus/schemas/LOCK.schema.json",
  "title": "OMEGA Nexus Lock",
  "description": "Schema for Lock files (*.LOCK)",
  "type": "object",
  "required": ["holder", "acquiredAt", "expiresAt"],
  "properties": {
    "holder": {
      "type": "string",
      "description": "Process/session holding the lock"
    },
    "acquiredAt": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{3})?Z$",
      "description": "ISO 8601 UTC timestamp when lock was acquired"
    },
    "expiresAt": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{3})?Z$",
      "description": "ISO 8601 UTC timestamp when lock expires"
    },
    "pid": {
      "type": "integer",
      "description": "Process ID"
    },
    "reason": {
      "type": "string",
      "description": "Reason for acquiring lock"
    }
  },
  "additionalProperties": false
}
