{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omega.nexus/schemas/REG.schema.json",
  "title": "OMEGA Nexus Registry",
  "description": "Schema for Registry files (registry-TYPE.json)",
  "type": "object",
  "required": ["type", "counters", "lastUpdated"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Registry type identifier"
    },
    "counters": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      },
      "description": "Counters by date (YYYYMMDD -> count)"
    },
    "lastUpdated": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{3})?Z$",
      "description": "ISO 8601 UTC timestamp of last update"
    },
    "totalCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Total count of all IDs generated"
    },
    "meta": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "additionalProperties": false
}
