{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omega.nexus/schemas/SEAL.schema.json",
  "title": "OMEGA Nexus Seal",
  "description": "Schema for Seal files (SEAL-YYYYMMDD-NNNN.yaml)",
  "type": "object",
  "required": ["id", "timestamp", "rootHash", "scope", "status"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^SEAL-[0-9]{8}-[0-9]{4}$",
      "description": "Seal ID in format SEAL-YYYYMMDD-NNNN"
    },
    "timestamp": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{3})?Z$",
      "description": "ISO 8601 UTC timestamp"
    },
    "rootHash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "Merkle root hash"
    },
    "scope": {
      "type": "string",
      "enum": ["FULL", "PARTIAL", "INCREMENTAL"],
      "description": "Seal scope"
    },
    "status": {
      "type": "string",
      "enum": ["VALID", "SUPERSEDED", "REVOKED"],
      "description": "Seal status"
    },
    "previousSeal": {
      "type": ["string", "null"],
      "pattern": "^SEAL-[0-9]{8}-[0-9]{4}$",
      "description": "Previous seal ID (for chain)"
    },
    "manifest": {
      "type": "string",
      "pattern": "^MANIFEST-[0-9]{8}-[0-9]{4}$",
      "description": "Associated manifest ID"
    },
    "session": {
      "type": "string",
      "pattern": "^SES-[0-9]{8}-[0-9]{4}$",
      "description": "Session that created this seal"
    },
    "fileCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of files sealed"
    },
    "completeness": {
      "type": "string",
      "pattern": "^COMP-[0-9]{8}-[0-9]{4}$",
      "description": "Associated completeness report"
    },
    "actor": {
      "type": "string",
      "description": "Who created the seal"
    },
    "meta": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "additionalProperties": false
}
