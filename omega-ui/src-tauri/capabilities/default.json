{
  "$schema": "https://schema.tauri.app/config/2/capability-schema",
  "identifier": "default",
  "description": "Default capabilities for OMEGA UI",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "shell:default",
    "shell:allow-open",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-home-read-recursive",
    "fs:allow-desktop-read-recursive",
    "fs:allow-document-read-recursive",
    "fs:allow-download-read-recursive"
  ]
}
