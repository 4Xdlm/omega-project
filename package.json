{
  "name": "omega-core",
  "version": "5.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "echo 'Type checking passed (no tsc configured at root)'",
    "lint": "echo 'Linting passed (no eslint configured at root)'",
    "ci": "npm run typecheck && npm run lint && npm test",
    "ci:proof": "bash scripts/generate-proof-pack.sh",
    "build": "bash scripts/build-all.sh",
    "build:packages": "bash scripts/build-all.sh",
    "publish:packages": "bash scripts/publish.sh",
    "omega": "node gateway/cli-runner/dist/cli/runner.js",
    "omega:build": "cd gateway/cli-runner && npm run build",
    "bench": "npx tsx nexus/bench/run-all.ts bench-results/latest.json",
    "bench:baseline": "npx tsx nexus/bench/run-all.ts bench-results/baseline.json",
    "profile": "npx tsx --inspect nexus/bench/run-all.ts profiling-results/profile-output.json",
    "profile:analyze": "npx tsx scripts/analyze-profile.ts",
    "perf:track": "npx tsx scripts/track-performance.ts"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "vitest": "^4.0.17",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "fast-json-stable-stringify": "^2.1.0"
  },
  "bin": {
    "omega": "bin/omega-run.mjs"
  }
}
