{
  "name": "@omega/canon-kernel",
  "version": "0.1.0",
  "description": "OMEGA Canon Kernel - Universal Truth Engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./hash": {
      "types": "./dist/hash/index.d.ts",
      "import": "./dist/hash/index.js"
    },
    "./id": {
      "types": "./dist/id/index.d.ts",
      "import": "./dist/id/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "keywords": [
    "omega",
    "canon",
    "kernel",
    "truth",
    "deterministic",
    "hash-chain"
  ],
  "author": "OMEGA Project",
  "license": "MIT"
}
