{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "omega-gateway-event-v1.0.0",
  "title": "OMEGA Gateway Event",
  "description": "Schema for ledger events. INV-PNP-07: append-only + hash-chain.",
  "type": "object",
  "required": [
    "event_id",
    "run_id",
    "ts",
    "kind",
    "plugin_id",
    "request_id",
    "input_hash",
    "output_hash",
    "prev_hash",
    "event_hash",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "kind": {
      "type": "string",
      "enum": [
        "REGISTER",
        "ENABLE",
        "DISABLE",
        "INVOKE",
        "RESULT",
        "REJECT",
        "ERROR",
        "PROOF_EXPORT"
      ]
    },
    "plugin_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "input_hash": {
      "type": "string",
      "description": "SHA-256 of canonical input (empty string if N/A)"
    },
    "output_hash": {
      "type": "string",
      "description": "SHA-256 of canonical output (empty string if N/A)"
    },
    "prev_hash": {
      "type": "string",
      "description": "event_hash of previous event (empty string for genesis)"
    },
    "event_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 of canonical event (sans event_hash field)"
    },
    "meta": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Data-only metadata, no secrets"
    }
  }
}
