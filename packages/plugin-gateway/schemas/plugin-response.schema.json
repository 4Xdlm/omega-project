{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "omega-plugin-response-v1.0.0",
  "title": "OMEGA Plugin Response",
  "description": "Schema for response Plugin → Gateway → OMEGA. INV-PNP-04.",
  "type": "object",
  "required": [
    "request_id",
    "plugin_id",
    "status",
    "result",
    "evidence_hashes",
    "duration_ms",
    "notes"
  ],
  "additionalProperties": false,
  "properties": {
    "request_id": { "type": "string", "minLength": 1 },
    "plugin_id": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["ok", "rejected", "error", "timeout"] },
    "result": {
      "oneOf": [
        { "$ref": "#/$defs/TextPayload" },
        { "$ref": "#/$defs/JSONPayload" },
        { "$ref": "#/$defs/BinaryRefPayload" },
        { "$ref": "#/$defs/DatasetSlicePayload" },
        { "type": "null" }
      ]
    },
    "evidence_hashes": {
      "type": "object",
      "required": ["input_hash", "output_hash"],
      "additionalProperties": false,
      "properties": {
        "input_hash": { "type": "string" },
        "output_hash": { "type": "string" }
      }
    },
    "duration_ms": { "type": "number", "minimum": 0 },
    "notes": { "type": "string" }
  },
  "$defs": {
    "TextPayload": {
      "type": "object",
      "required": ["kind", "content", "encoding", "metadata"],
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "text" },
        "content": { "type": "string" },
        "encoding": { "const": "utf-8" },
        "metadata": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "JSONPayload": {
      "type": "object",
      "required": ["kind", "data", "schema_ref"],
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "json" },
        "data": { "type": "object" },
        "schema_ref": { "type": "string", "minLength": 1 }
      }
    },
    "BinaryRefPayload": {
      "type": "object",
      "required": ["kind", "artifact_id", "artifact_hash", "mime_type"],
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "binary_ref" },
        "artifact_id": { "type": "string", "minLength": 1 },
        "artifact_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "mime_type": { "type": "string", "minLength": 1 }
      }
    },
    "DatasetSlicePayload": {
      "type": "object",
      "required": ["kind", "slice_ids", "source", "filters"],
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "dataset_slice" },
        "slice_ids": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "source": { "type": "string", "minLength": 1 },
        "filters": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    }
  }
}
