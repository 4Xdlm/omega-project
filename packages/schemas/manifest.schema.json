{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omega.dev/schemas/manifest.schema.json",
  "title": "OMEGA Phase Manifest",
  "description": "Artifact manifest for phase execution",
  "type": "object",
  "properties": {
    "phase": {
      "type": "string",
      "pattern": "^[a-z]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "METADATA ONLY - not in signed payload"
    },
    "verdict": {
      "enum": ["PASS", "FAIL"]
    },
    "commit": {
      "type": "string",
      "pattern": "^[a-f0-9]{40}$"
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "size": { "type": "integer", "minimum": 0 }
        },
        "required": ["path", "sha256", "size"],
        "additionalProperties": false
      }
    },
    "tests": {
      "type": "object",
      "properties": {
        "L0": { "$ref": "#/$defs/testLevel" },
        "L1": { "$ref": "#/$defs/testLevel" },
        "L2": { "$ref": "#/$defs/testLevel" },
        "L3": { "$ref": "#/$defs/testLevel" },
        "L4": { "$ref": "#/$defs/testLevel" }
      },
      "additionalProperties": false
    }
  },
  "required": ["phase", "version", "verdict", "commit", "artifacts"],
  "$defs": {
    "testLevel": {
      "type": "object",
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "pass": { "type": "integer", "minimum": 0 },
        "fail": { "type": "integer", "minimum": 0 }
      },
      "required": ["total", "pass", "fail"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
