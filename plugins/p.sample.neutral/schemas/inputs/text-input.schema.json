{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "omega:p.sample.neutral:input:text-input:v1.0.0",
  "title": "Neutral Plugin Text Input",
  "type": "object",
  "required": ["kind", "content", "encoding", "metadata"],
  "additionalProperties": false,
  "properties": {
    "kind": { "type": "string", "const": "text" },
    "content": { "type": "string", "minLength": 1, "maxLength": 1048576 },
    "encoding": { "type": "string", "const": "utf-8" },
    "metadata": { "type": "object", "additionalProperties": { "type": "string" } }
  }
}
